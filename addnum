#include <iostream>
using namespace std;

int main() {
    double num1, num2, sum;

    // Input two numbers
    cout << "Enter the first number: ";
    cin >> num1;

    cout << "Enter the second number: ";
    cin >> num2;

    // Add the numbers
    sum = num1 + num2;

    // Display the result
    cout << "Sum = " << sum << endl;

    return 0;
}
